{
	"name": "AzureAdOauth2Pipeline",
	"properties": {
		"description": "oauth2 for restful api workflow",
		"activities": [
			{
				"name": "AKVClientId",
				"description": "get client id from azure key vault",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://az-keyvault.vault.azure.cn/secrets/clientId/9df32a54798c4ac581d12f0414458a75?api-version=7.0",
					"method": "GET",
					"authentication": {
						"type": "MSI",
						"resource": "https://vault.azure.cn"
					}
				}
			},
			{
				"name": "AKVClientSecret",
				"description": "get client secret from azure key vault",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://az-keyvault.vault.azure.cn/secrets/clientSecret/7c67ff3cc83f40fab311276046d65bbc?api-version=7.0",
					"method": "GET",
					"authentication": {
						"type": "MSI",
						"resource": "https://vault.azure.cn"
					}
				}
			},
			{
				"name": "AzureAdLogin",
				"description": "user clientid & client scret to get access token",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "AKVClientSecret",
						"dependencyConditions": [
							"Succeeded"
						]
					},
					{
						"activity": "client_id",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://login.microsoftonline.com/consumers/oauth2/v2.0/token",
					"method": "POST",
					"headers": {
						"Content-Type": "application/x-www-form-urlencoded"
					},
					"body": "grant_type=client_credentials&scope=https://graph.microsoft.com/.default&client_id=815e0648-7584-4ca4-a14a-e213339ba4e9&client_secret=b_c8Q~hVgmAU4IymyN1_Ty_rTRf9IoG8v3O6Ccac"
				}
			},
			{
				"name": "client_id",
				"description": "client id",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "AKVClientId",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "client_id",
					"value": "@activity('AKVClientId').output. value"
				}
			}
		],
		"variables": {
			"client_id": {
				"type": "String"
			},
			"client_secret": {
				"type": "String"
			}
		},
		"annotations": []
	}
}